<% layout("/layouts/boilerplate") %>
<div class="row">
<div class="col-8 offset-2">
    <br> <br> 
    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required>
            <div class="invalid-feedback">Enter name of place.</div> 
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description.." class="form-control" required></textarea>
            <div class="invalid-feedback">Describe your place.</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control" required>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                <div class="invalid-feedback">Write price in numbers(e.g., X,XX,XXX).</div>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" type="text" placeholder="Enter country" class="form-control" required>
                <div class="invalid-feedback">Write name of the Country.</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" type="text" placeholder="Enter location" class="form-control" required>
            <div class="invalid-feedback">Write where the place is located.</div>
        </div> 
        <br>
        <button class="btn btn-dark add-btn mb-5">Save</button>
    </form>
</div>
</div>
